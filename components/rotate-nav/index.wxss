/* components/rotate-nav/index.wxss */

.wrap {
    width: 330rpx;
    height: 80rpx;
    margin: 0 auto;
    transform-style: preserve-3d;
    transition: all 0.5s;
    position: relative;
    /* box-shadow: 0 1px 3px rgba(0, 0, 0, .5); */
}

.wrap .title {
    position: absolute;
    width: 100%;
    line-height: 80rpx;
    box-shadow: 0 1px 3px rgba(0, 0, 0, .5);
    background-color: #fff;
    background: url(data:image/png;base64,) repeat;
    border-radius: 5rpx; 
    bottom: 0;
    text-align: center;
    transform: opacity 0.45s;
    /* backface-visibility:hidden; */
}
.translucent {
    opacity: 0.5;
}
@keyframes rotate {
    0% {
        transform: rotateY(0deg);
    }
    100% {
        transform: rotateY(360deg);
    }
}